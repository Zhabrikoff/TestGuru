<tr>
  <td class="align-middle">
    <%= content_tag :span, test.title, class: "test-title", data: { test_id: test.id } %>
    <%= render "form_inline", test: test == @test ? @test : test %>
  </td>
  <td class="align-middle"><%= test.level %></td>
  <td class="align-middle"><%= test.questions.count %></td>
  <td class="align-middle"><%= test.timer %></td>
  <td>
    <%= button_to test.status ? "Mark as not ready" : "Mark as ready",
                  update_status_admin_test_path(test),
                  method: :patch,
                  class: test.status ? "btn btn-danger status-btn" : "btn btn-success status-btn" %>
  </td>
  <td class="align-middle"><%= link_to t(".show"), admin_test_path(test) %></td>
  <td class="align-middle">
    <%= link_to "Edit", edit_admin_test_path(test), data: { test_id: test.id }, class: "form-inline-link" %>
  </td>
  <td class="align-middle">
    <%= link_to "Delete", admin_test_path(test), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
  </td>
</tr>
