<h1><%= question_header(@question) %></h1>

<%= form_with model: [:admin, @test, @question], local: true, data: { turbo: false } do |form| %>
  <%= render "shared/errors", resource: @question %>

  <p>
    <%= form.label :body %>
    <%= form.text_field :body %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<%= link_to "Back", admin_test_path(@question.test) %>
