<h1>Badges</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Image</th>
      <th>Rule</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @badges.each do |badge| %>
      <tr>
        <td><%= badge.name %></td>
        <td><img src="<%= badge.image %>" alt="<%= badge.name %>" width="40"></td>
        <td><%= badge.rule_type %> <%= badge.rule_value.present? ? "(#{badge.rule_value})" : "" %></td>
        <td>
          <%= link_to "Edit", edit_admin_badge_path(badge), class: "btn btn-primary" %>
          <%= link_to "Delete", admin_badge_path(badge),
                      method: :delete,
                      data: { confirm: "Are you sure?" },
                      class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Create badge", new_admin_badge_path, class: "btn btn-success" %>
