<%= form_with model: [:admin, @question, @answer], local: true, data: { turbo: false } do |form| %>
  <%= render "shared/errors", resource: @answer %>

  <p>
    <%= form.label :body %>
    <%= form.text_area :body, rows: 8, cols: 70 %>
  </p>

   <p>
    <%= form.label :correct %>
    <%= form.check_box :correct %>
  </p>

  <p><%= form.submit %></p>
<% end %>
