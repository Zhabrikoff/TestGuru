<h1>Tests</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Level</th>
    <th>Number of questions</th>
    <th>Author</th>
    <th>Actions</th>
  </tr>
  <% @tests.each do |test| %>
    <tr>
      <td><%= test.title %></td>
      <td><%= test.level %></td>
      <td><%= test.questions.count %></td>
      <td><%= test.author.name %></td>
      <td><%= link_to "Show", test_path(test) %></td>
    </tr>
  <% end %>
</table>
