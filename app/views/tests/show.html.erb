<h1>Test: <%= @test.title %></h1>

<h2>Test author: <%= @test.author.name %></h2>
<h2>Test level: <%= @test.level %></h2>

<h3>Questions</h3>

<table>
  <tr>
    <th>Title</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @test.questions.each do |question| %>
    <tr>
      <td><%= question.body %></td>
      <td><%= link_to "Show", question_path(question) %></td>
      <td><%= link_to "Edit", edit_question_path(question) %></td>
      <td><%= link_to "Delete", question_path(question), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></td>
     </tr>
  <% end %>
</table>

<br />
<%= link_to "Add question", new_test_question_path(@test) %>
<%= link_to "Main page", tests_path %>
